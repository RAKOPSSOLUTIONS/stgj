{% if title is defined %}
  <div class="modal-header">
    <h5 class="modal-title text-uppercase">{{ title }}</h5>
    <button 
      type="button" 
      class="btn-close" 
      data-bs-dismiss="modal" 
      aria-label="{{ "Close"|trans }}"
    ></button>
  </div>
{% endif %}
{% if body is defined %}
  <div class="modal-body">
    {{ body|raw }}
  </div>
{% endif %}